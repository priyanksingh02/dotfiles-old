function tnail() {
  [[ $# != 1 ]] && echo "tnail <Video Title>" && return
  local link=$(youtube-dl --get-thumbnail "ytsearch:$1")
  echo "LINK is " $link
  [[ $(echo $link | wc -l) != 1 ]] && echo "Multiple Links detected!" && return 
  wget $link
}

